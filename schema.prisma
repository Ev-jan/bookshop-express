datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
  id           Int   @id @default(autoincrement())
  name         String   @db.VarChar(255)
  signUpDate   DateTime   @map(name: "created_at")
  email        String   @db.VarChar(255)
  bio          String 
  password     String   @db.VarChar(255)
  image        String   @db.VarChar(255)
  ratedBooks   Rating[]
}

model Currency {
  shortName    String    @id @map(name: "short_name")
  fullName     String    @map(name: "full_name")
  Book         Book[]
}

model Book {
    id       Int @id @default(autoincrement())
    title    String @db.VarChar(255)
    language String @db.VarChar(255)
    amount   Float
    currencyId String
    currency Currency @relation(fields: [currencyId], references: [shortName])
    year DateTime
    description String
    author      Author[]
    category Category[]
rating Rating[]

}

model Author {
    id    Int    @id @default(autoincrement())
    name  String @db.VarChar(255)
    birth   DateTime 
    death   DateTime?
    books Book[]
}

model Category {
    id    Int     @id @default(autoincrement())
    name String @db.VarChar(255)
    books Book[]
}

model Rating {
    book Book @relation(fields: [bookId], references: [id])
  bookId     Int @map(name: "book_id")
  user User @relation(fields: [userId], references: [id])
  userId     Int @map(name: "user_id")
  ratingValue Int @map(name: "rating_value")
  @@id([bookId, userId])
}
